// d-screed

@media screen

  .screed
    background-color $screed-bg-color

    &.screed-focus // for example // move to themes
      box-shadow 0 0 20px -4px rgba(0, 200, 0, .5) inset, 0 0 20px -4px rgba(0, 200, 0, .5) // move to themes

    *::selection // for example // move to themes
      color rgb(200, 0, 0)
      -webkit-text-stroke  .3px rgb(200, 0, 0, .5)
      background-color rgba(200, 0, 0, .05)

    .screed-json
      position fixed
      z-index 1
      bottom .5em
      left .5em
      width 12em
      height 50em
      font-family sans-serif
      font-size 8pt
      background-color $screed-info-bg-color
      border 1px solid $screed-bg-color
      &.hidden
        display none

    .screed-position
      position fixed
      z-index 1
      top 0
      right 0
      width 25em
      height 3.5em
      padding .1em .25em
      font-family sans-serif
      font-size 8pt
      background-color $screed-info-bg-color
      border 1px solid $screed-bg-color
      &.hidden
        display none

@media all

  .screed
    font-size   $font-size
    line-height $line-height

    & *
      box-sizing border-box

    & [contenteditable=true]:focus
      outline none

    p
    span
      white-space pre-wrap

@media print

  .screed-json
  .screed-position
    display none
