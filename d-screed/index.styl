// d-screed

@media screen

  .screed
    background-color $screed-bg-color

    &.screed-focus
      box-shadow $screed-in-focus-box-shadow

    *::selection
      color $screed-selection-color
      -webkit-text-stroke .3px $screed-selection-bg-color
      background-color $screed-selection-bg-color

    .screed-json
      position fixed
      z-index 1
      bottom .5em
      left .5em
      width 12em
      height 50em
      font-family sans-serif
      font-size 8pt
      background-color $screed-info-bg-color
      border 1px solid $screed-bg-color
      &.hidden
        display none

    .screed-position
      position fixed
      z-index 1
      top 0
      right 0
      width 25em
      height 36px
      padding .25em .25em 0 .25em
      font-family sans-serif
      font-size 8pt
      background-color $screed-info-bg-color
      border 1px solid $screed-bg-color
      &.hidden
        display none

@media all

  .screed
    font-size $screed-font-size
    line-height $screed-line-height

    & *
      box-sizing border-box

    & [contenteditable=true]:focus
      outline none

    p
    span
      white-space pre-wrap

@media print

  .screed-json
  .screed-position
    display none

@import './cursors'